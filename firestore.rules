rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les utilisateurs
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Règles pour les tontines
    match /tontines/{tontineId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.creatorId;
      allow update: if request.auth != null 
        && (request.auth.uid == resource.data.creatorId 
            || request.auth.uid in resource.data.memberIds);
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.creatorId;
    }

    // Règles pour les transactions
    match /transactions/{transactionId} {
      allow read: if request.auth != null 
        && (request.auth.uid == resource.data.senderId 
            || request.auth.uid == resource.data.receiverId);
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.senderId;
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.senderId;
    }

    // Règles pour les crédits
    match /credits/{creditId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }

    // Règles pour les messages
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.senderId;
    }

    // Règles pour les notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }

    // Règles pour les cartes
    match /cards/{cardId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }

    // Règles pour l'épargne
    match /savings/{savingsId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }

    // Règles pour les marchands
    match /merchants/{merchantId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.uid == resource.data.ownerId;
    }

    // Règles pour les paiements
    match /payments/{paymentId} {
      allow read: if request.auth != null 
        && (request.auth.uid == resource.data.senderId 
            || request.auth.uid == resource.data.receiverId);
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.senderId;
    }

    // Règles temporaires pour les tests - À SUPPRIMER EN PRODUCTION
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
